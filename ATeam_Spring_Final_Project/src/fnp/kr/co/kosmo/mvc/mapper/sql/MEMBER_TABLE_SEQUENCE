CREATE TABLE MEMBER
(
    USER_NUM          NUMBER    constraint MEMBER_USER_NUM_PK      PRIMARY KEY, 
    USER_ID           VARCHAR2(70) constraint MEMBER_USER_ID_NN   NOT NULL, 
    USER_PWD          VARCHAR2(20)  constraint MEMBER_USER_PWD_NN  NOT NULL, 
    USER_NAME         VARCHAR2(50)  constraint MEMBER_USER_NAME_NN  NOT NULL, 
    USER_PHONE        VARCHAR2(15)  constraint MEMBER_USER_PHONE_NN  NOT NULL, 
    USER_BIRTH        VARCHAR2(15)  constraint MEMBER_USER_BIRTH_NN  NOT NULL, 
    USER_AGE          NUMBER(3)    constraint MEMBER_USER_AGE_NN   NOT NULL, 
    USER_GENDER       VARCHAR2(10)  constraint MEMBER_USER_GENDER_NN  NOT NULL, 
    USER_COUPLENUM    NUMBER          DEFAULT NULL,
    USER_DDAY         DATE            DEFAULT NULL,
    USER_MATCH        NUMBER          DEFAULT 0 constraint MEMBER_USER_MATCH_NN NOT NULL, 
    USER_ADATE        DATE            DEFAULT sysdate constraint MEMBER_USER_ADATE_NN NOT NULL, 
    USER_TENDENCY     VARCHAR2(50)    DEFAULT '상대의 성향이 없습니다' constraint MEMBER_USER_TENDENCY_NN NOT NULL,
    CONSTRAINT MEMBER_USER_ID_UQ UNIQUE(USER_ID)
)
/

CREATE SEQUENCE MEMBER_SEQ
START WITH 1
INCREMENT BY 1;
/

COMMENT ON TABLE MEMBER IS 'MEMBER'
/

COMMENT ON COLUMN MEMBER.USER_NUM IS 'ON DELETE CASCADE'
/

COMMENT ON COLUMN MEMBER.USER_ID IS '유저 Id'
/

COMMENT ON COLUMN MEMBER.USER_PWD IS '유저 Password'
/

COMMENT ON COLUMN MEMBER.USER_NAME IS '유저 이름'
/

COMMENT ON COLUMN MEMBER.USER_PHONE IS '유저 연락처'
/

COMMENT ON COLUMN MEMBER.USER_BIRTH IS '유저 생년월일'
/

COMMENT ON COLUMN MEMBER.USER_AGE IS '유저 나이'
/

COMMENT ON COLUMN MEMBER.USER_GENDER IS '남자 or 여자'
/

COMMENT ON COLUMN MEMBER.USER_COUPLENUM IS '연인 고유번호'
/

COMMENT ON COLUMN MEMBER.USER_DDAY IS '연인이 된 날짜'
/

COMMENT ON COLUMN MEMBER.USER_MATCH IS '신청한 상태 : 1 / 신청 받았을 경우 : 상대방 번호'
/

COMMENT ON COLUMN MEMBER.USER_ADATE IS '유저 가입일자'
/

COMMENT ON COLUMN MEMBER.USER_TENDENCY IS '유저 성향'
/