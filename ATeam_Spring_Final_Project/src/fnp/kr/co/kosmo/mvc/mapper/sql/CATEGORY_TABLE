CREATE TABLE APPLICATION_COUPLE
(
    USER_FROM_INDEX    NUMBER            NOT NULL, 
    USER_TO_INDEX      NUMBER            NOT NULL, 
    AC_TITLE           VARCHAR2(100)     DEFAULT 'TITLE' NOT NULL, 
    AC_CONTENT         VARCHAR2(1000)    DEFAULT 'CONTENT' NOT NULL
)
/

COMMENT ON TABLE APPLICATION_COUPLE IS '커플 신청관련'
/

COMMENT ON COLUMN APPLICATION_COUPLE.USER_FROM_INDEX IS '신청자 번호'
/

COMMENT ON COLUMN APPLICATION_COUPLE.USER_TO_INDEX IS '받는사람 번호'
/

COMMENT ON COLUMN APPLICATION_COUPLE.AC_TITLE IS '보내는 신청 제목'
/

COMMENT ON COLUMN APPLICATION_COUPLE.AC_CONTENT IS '보내는 신청 내용'
/

ALTER TABLE APPLICATION_COUPLE
    ADD CONSTRAINT FK_APPLICATION_COUPLE_USER_FRO FOREIGN KEY (USER_FROM_INDEX)
        REFERENCES MEMBER (USER_NUM)
/

ALTER TABLE APPLICATION_COUPLE
    ADD CONSTRAINT FK_APPLICATION_COUPLE_USER_TO_ FOREIGN KEY (USER_TO_INDEX)
        REFERENCES MEMBER (USER_NUM)
/