CREATE TABLE PRODUCT
(
    PRO_INDEX          NUMBER     CONSTRAINT PRODUCT_PRO_INDEX_PK  PRIMARY KEY, 
    PRO_NAME           VARCHAR2(150)   DEFAULT 'NONE' CONSTRAINT PRODUCT_PRO_NAME_NN  NOT NULL, 
    PRO_CATEGORY       VARCHAR2(50)     DEFAULT 'NONE' CONSTRAINT PRODUCT_PRO_CATEGORY_NN NOT NULL, 
    PRO_BEFOREPRICE    NUMBER           DEFAULT 0 CONSTRAINT PRODUCT_PRO_BEFOREPRICE_NN NOT NULL, 
    PRO_AFTERPRICE     NUMBER            DEFAULT 0 CONSTRAINT PRODUCT_PRO_AFTERPRICE_NN NOT NULL, 
    PRO_DISCOUNT       NUMBER            DEFAULT 0 CONSTRAINT PRODUCT_PRO_DISCOUNT_NN NOT NULL, 
    PRO_OFFDAY         DATE              DEFAULT SYSDATE CONSTRAINT PRODUCT_PRO_OFFDAY_NN NOT NULL, 
    PRO_DISCRIPTION    VARCHAR2(2000)    DEFAULT 'NONE' CONSTRAINT PRODUCT_PRO_DISCRIPTION_NN NOT NULL, 
    PRO_IMG            VARCHAR2(500)     DEFAULT 'NONE' CONSTRAINT PRODUCT_PRO_IMG_NN NOT NULL, 
    PRO_RATING         FLOAT             DEFAULT 0 CONSTRAINT PRODUCT_PRO_RATING_NN NOT NULL, 
    PRO_RDATE          DATE              DEFAULT SYSDATE CONSTRAINT PRODUCT_PRO_RDATE_NN NOT NULL,
    CONSTRAINT PRODUCT_PRO_CATEGORY_FK FOREIGN KEY(PRO_CATEGORY) REFERENCES CATEGORY(CATEGORY_NAME)
)
/


CREATE SEQUENCE PRODUCT_SEQ
START WITH 1
INCREMENT BY 1;
/



COMMENT ON TABLE PRODUCT IS 'COUPLE SHOP LIST'
/

COMMENT ON COLUMN PRODUCT.PRO_INDEX IS '상품 인덱스'
/

COMMENT ON COLUMN PRODUCT.PRO_NAME IS '상품명'
/

COMMENT ON COLUMN PRODUCT.PRO_CATEGORY IS '상품 카테고리'
/

COMMENT ON COLUMN PRODUCT.PRO_BEFOREPRICE IS '상품 원가'
/

COMMENT ON COLUMN PRODUCT.PRO_AFTERPRICE IS '상품 할인가'
/

COMMENT ON COLUMN PRODUCT.PRO_DISCOUNT IS '상품 할인율'
/

COMMENT ON COLUMN PRODUCT.PRO_OFFDAY IS '할인 마감일'
/

COMMENT ON COLUMN PRODUCT.PRO_DISCRIPTION IS '상품 설명'
/

COMMENT ON COLUMN PRODUCT.PRO_IMG IS '상품 이미지'
/

COMMENT ON COLUMN PRODUCT.PRO_RATING IS '상품 평균평점'
/

COMMENT ON COLUMN PRODUCT.PRO_RDATE IS '상품 등록일자'
/
