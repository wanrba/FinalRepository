-- ADVICE 테이블 생성
CREATE TABLE ADVICE (
    ADVICE_INDEX NUMBER CONSTRAINT ADVICE_ADVICE_INDEX_PK PRIMARY KEY,
    ADVICE_TITLE VARCHAR2(100) CONSTRAINT ADVICE_ADVICE_TITLE_NN NOT NULL,
    ADVICE_IMG VARCHAR2(300) CONSTRAINT ADVICE_ADVICE_IMG_NN NOT NULL,
    ADVICE_CONTENT CLOB CONSTRAINT ADVICE_ADVICE_CONTENT_NN NOT NULL
);

-- ADVICE SEQUENCE 생성
CREATE SEQUENCE ADVICE_SEQ
START WITH 1
INCREMENT BY 1;